<div class= "row">
  <div class="col-md-2"></div>
                <div class="col-md-8">
<h1>Pools</h1>
<div class="panel panel-default">
                <div class="panel-body left-header">
                        <%= link_to 'My Institutions', institutions_path %>
                </div>
                <div class="right-header">

<table class="table table-hover">
        <thead class="active">
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
        </thead>
        <tbody>
        <%if params[:inst]=="Other"%>
                <% @inst.each do |inst| %>
                  <tr class="warning not-active ">
                        <td><%= inst.name %></td>
                        <td><%= inst.description %></td>
                        <td></td>
                        <td></td>
                        </tr>
		<%end%>
                    <%if is_director%>
                         <td><%= link_to 'Edit', edit_institution_path,{class: "btn btn-warning"} %></td>
                    <%else%>
                         <td></td>
                    <%end%>
                        </tr>
        <%end%>
        </tbody>
</table>
<%=will_paginate%>
</div>
<div class="col-md-2"></div>
</div>
</div>
                 <style>
.not-active {
   pointer-events: none;
   cursor: default;
}
</style>

