<% provide(:title, 'New Question') %>
<h1>Create new Question</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@question) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.hidden_field :exercise_id, :value => params[:exercise_id] %>
			<%= f.label :description %>
			<%= f.text_field :description%>

			<%= f.submit "Create new exercise", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>