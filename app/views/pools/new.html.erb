<h1>Create new pool</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@pool) do |f| %>
			<%= render 'shared/error_messages' %>
			<%=f.label :name %>
			<%=f.text_field :name %>

			<%= f.label :description %>
			<%= f.text_field :description%>

			<%= f.label :institution %>
			<%= f.text_field :institution%>

			<%= f.label :specialization %>
			<%= f.text_field :specialization%>

			<%= f.submit "Create a pool", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
<%= link_to 'Back', pools_path%>