<h1>Pools</h1>
<table class="table">
	<thead>
		<th>Name</th>
		<th>Description</th>
		<!--<th>Institution</th>-->
		<th>Specialization</th>
	</thead>
	<tbody>
	<% @pools.each do |pool| %>
		  <tr>
			<td><%= pool.name %></td>
			<td><%= pool.description %></td>
			<!--<td><%= pool.institution %></td>-->
			<td><%= pool.specialization %></td>
			<% current_user.pools.each do |p| %>
				<%if pool.id == p.id %>
					<td><%= link_to 'Show', pool,{class: "btn btn-primary"} %></td>
					<%if is_admin%>
					<td><%= link_to 'Edit', edit_pool_path(pool),{class: "btn btn-warning"} %></td>
					<%end%>
				<%end%>
			<%end%>
			</tr>
		<%end%>
	</tbody>
</table>
<%=will_paginate%>
<%if is_director?(current_user)%>
	<%= link_to 'New Pool', new_pool_path,{class: "btn btn-success"} %> 
<%end%>