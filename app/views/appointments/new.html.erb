<h1>Appointments#new</h1>
<p><%=@user.id%></p>
<%= form_for(@appointment) do |f| %>
	<%= render 'shared/error_messages' %>
	<%=label :patient, :id %>
	<%=f.input_field :patient, data: { autocomplete_source: Patient.all.map(&:id) }%>
	<%=label :message, :content %>
	<%=text_area :message, :content ,:size => "30x10"%>
	<%= f.submit "Send message", class: "btn btn-large btn-primary" %>
<% end %>
