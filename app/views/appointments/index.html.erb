<h1>My Appointments</h1>
<table class="table">
  <thead>
    <tr class="row">
	<th class="sorting-asc">name</th>
	<th>description</th>



	<th></th>
</tr>
  </thead>

  <tbody>

    <% @messages.each do |message| %>
		<%unless message.nil?%>
			<% @appointment=Appointment.find(message.messageable_id)%>
				<tr class="row">
					<td><%=@appointment.name%></td>
					<td><%=@appointment.description%></td>	
					<td><%=@appointment.updated_at%></td>	
					<td>

					<%=form_for(@appointment) do |f| %> 
						<%= f.hidden_field :messageable_id, :value => @appointment.id %>
						<%= f.hidden_field :messageable_type, :value => Appointment.name %>
						<%= f.hidden_field :func, :value => "create" %>
						<%= f.submit "Send new message", class: "btn btn-success" %>
						<%end%>
					</td>
					<!--

					<td>
					<%=form_for(@appointment) do |f| %> 
						<%= f.hidden_field :appointment_id, :value => @appointment.id %>
						<%= f.hidden_field :func, :value => "destroy" %>
						<%= f.submit "Destroy appointment", class: "btn" %>
						<%end%>
					</td>
					-->
					
				</tr>
			<%end%>
		
	<%end%>
    </tbody>
    </table>
<%unless is_patient%>
<%= link_to 'New Appointment', new_appointment_path, {class: "btn btn-success"}%> 
<%end%>