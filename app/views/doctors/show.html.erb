<%provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>

			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>

			</h1>
		</section>
	</aside>
</div>
<%if is_doctor %>


<ul class="list-group">
<li class="list-group-item list-group-item-info">Current Patients</li>
<% @patients.find_each do |patient|%>
	<li class="list-group-item"><%=patient.user.name%></li>
	
<%end%>
</ul>
<%end%>

<%= link_to 'Edit', edit_doctor_path(@doctor),{class: "btn btn-primary"} %>

