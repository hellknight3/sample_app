<h1>Listing doctors</h1>


<table>
  <thead>
    <tr>
      <th>Users name</th>
      <th>Accepted</th>
      <th></th>
    </tr>
  </thead>
   <tbody>
<% @patients.each do |patient| %>
      <tr>
      
	<td><%= link_to patient.user.name, patient %></td>
	<td><%= patient.accepted %></td>
	
	
	
		<%if patient.accepted%>
			<td>
				<%= link_to 'View old Appointments', appointment_path(patient.id) %>
			</td>
			<td>
			<%= link_to 'New Appointment', new_appointment_path({patient_id: patient.id,doctor_id: @doctor.id}) %>
			</td>
			
		<%else%>
		<td>
			<%=form_for(@doctor) do |f| %> 
			<%= f.hidden_field :patient_id, :value => patient.id %>
			<%= f.hidden_field :func, :value => "accept" %>
			<%= f.submit "Accept patient", class: "btn" %>
			<%end%>
		</td>
		<td>
			<%=form_for(@doctor) do |f| %> 
			<%= f.hidden_field :patient_id, :value => patient.id %>
			<%= f.hidden_field :func, :value => "reject" %>
			<%= f.submit "Reject patient", class: "btn" %>
			<%end%>
		</td>
		
		<%end%>
	

      </tr>
    <% end %>
</tdbody>
</table>