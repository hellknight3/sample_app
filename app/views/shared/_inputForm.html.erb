<p><%=params[:user_type]%></p>
<%if user==current_user || new%>

	<div class="row">
		<div class="span6 offset3">
		
			<%= simple_form_for(user_type) do |f| %>
			
				<%= render 'shared/error_messages' %>
				<%=label :user, :name %>
				<%=text_field :user, :name %>

				<%= label :user, :email %>
				<%= text_field :user, :email%>
				<%unless new%>
					<%=label :user, :old_password %>
					<%=password_field :user, :old_password%>
				<%end%>
				<%=label :user, :password %>
				<%=password_field :user, :password%>

				<%= label :user, :password_confirmation, "Confirmation"%>
				<%= password_field :user, :password_confirmation%>
				<%if defined?(spec_user)%>
				<%if spec_user="Patient"%>
					<%=label :patient, :EmergencyContact %>
					<%=text_field :patient, :emergencyContact%>
					<%=label :patient, :emergencyPhoneNumber %>
					<%=text_field :patient, :emergencyPhoneNumber%>
					<%=label :dateOfBirth, :dateOfBirth %>
					<%=text_field :dateOfBirth, :dateOfBirth%>
					<%=label :patient, :familyDoctor %>
					<%=text_field :patient, :familyDoctor%>
					<%=label :patient, :phoneNumber %>
					<%=text_field :patient, :phoneNumber%>
					<%=label :patient, :weight %>
					<%=text_field :patient, :weight%>
					<%=label :patient, :height %>
					<%=text_field :patient, :height%>
					<%end%>
				<%end%>
				
				
				<%= f.button :submit %>
			<% end %>
		</div>
	</div>
<%end%>
