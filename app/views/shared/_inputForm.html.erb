<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(user_type) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%=label :user, :name %>
      <%=text_field :user, :name, class: "form-control" %>

      <%= label :user, :email %>
      <%= text_field :user, :email, class: "form-control"%>

      <%=label :user, :old_password %>
      <%=password_field :user, :old_password, class: "form-control"%>

      <%=label :user, :password %>
      <%=password_field :user, :password, class: "form-control"%>

      <%= label :user, :password_confirmation, "Confirmation"%>
      <%= password_field :user, :password_confirmation, class: "form-control"%>
      
      <%= f.button :submit,"Update Profile", {class: "btn btn-success"} %>
    <% end %>
  </div>
</div>
