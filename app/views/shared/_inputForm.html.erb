
<%if user==current_user || new%>

	<div class="row">
		<div class="span6 offset3">
		
			<%= simple_form_for(user_type) do |f| %>
			
				<%= render 'shared/error_messages' %>
				<%=label :user, :name %>
				<%=text_field :user, :name %>

				<%= label :user, :email %>
				<%= text_field :user, :email%>
				<%unless new%>
					<%=label :user, :old_password %>
					<%=password_field :user, :old_password%>
				<%end%>
				<%=label :user, :password %>
				<%=password_field :user, :password%>

				<%= label :user, :password_confirmation, "Confirmation"%>
				<%= password_field :user, :password_confirmation%>
				<%if defined?(spec_user)%>
					<%if spec_user="Patient"%>
						<%=f.input :emergencyContact%>
						<%=f.input :emergencyPhoneNumber%>
						<%=f.input :dateOfBirth%>
						<%=f.input :familyDoctor%>
						<%=f.input :phoneNumber%>
						<%=f.input :weight%>
						<%=f.input :height%>
					<%end%>
				<%end%>
				
				
				<%= f.button :submit, {class: "btn btn-success"} %>
			<% end %>
		</div>
	</div>
<%end%>
